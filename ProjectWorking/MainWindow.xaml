<Window x:Class="ProjectWorking.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectWorking"
        mc:Ignorable="d"
        Title="MainWindow" Height="2000" Width="1000">
    <Grid Margin="0,0,0,0">
        <TextBlock HorizontalAlignment="Left" Margin="200,75,0,0" TextWrapping="Wrap" Text="User Location" VerticalAlignment="Top" FontSize="24" FontWeight="Bold" TextDecorations="Underline"/>
        <TextBlock HorizontalAlignment="Right" Margin="0,75,175,0" TextWrapping="Wrap" Text="Destination Location" VerticalAlignment="Top" FontSize="24" FontWeight="Bold" TextDecorations="Underline" Width="261" RenderTransformOrigin="0.413,0.685"/>

        <TextBlock HorizontalAlignment="Left" Margin="75,150,0,0" TextWrapping="Wrap" Text="Region:" VerticalAlignment="Top" FontSize="18" FontWeight="Bold"/>
        <TextBlock HorizontalAlignment="Left" Margin="75,200,0,0" TextWrapping="Wrap" Text="Street Name:" VerticalAlignment="Top" FontSize="18" FontWeight="Bold"/>
        <TextBlock HorizontalAlignment="Left" Margin="75,250,0,0" TextWrapping="Wrap" Text="Current Position:" VerticalAlignment="Top" FontSize="18" FontWeight="Bold"/>

        <TextBlock HorizontalAlignment="Right" Margin="0,150,375,0" TextWrapping="Wrap" Text="Region Selected:" VerticalAlignment="Top" FontSize="18" FontWeight="Bold"/>
        <TextBlock HorizontalAlignment="Right" Margin="0,200,405,0" TextWrapping="Wrap" Text="Street Name:" VerticalAlignment="Top" FontSize="18" FontWeight="Bold"/>
        <TextBlock HorizontalAlignment="Right" Margin="0,250,442,0" TextWrapping="Wrap" Text="Position:" VerticalAlignment="Top" FontSize="18" FontWeight="Bold"/>

        <Rectangle HorizontalAlignment="Left" Height="250" Margin="64,300,0,0" Stroke="Black" VerticalAlignment="Top" Width="425"/>
        <Rectangle HorizontalAlignment="Left" Height="250" Margin="527,300,0,0" Stroke="Black" VerticalAlignment="Top" Width="425"/>

        <TextBlock HorizontalAlignment="Left" Margin="74,593,0,0" TextWrapping="Wrap" Text="Displaying Information On:" VerticalAlignment="Top" FontSize="18" FontWeight="Bold"/>
        <TextBlock HorizontalAlignment="Left" Margin="74,643,0,0" TextWrapping="Wrap" Text="Coordinates:" VerticalAlignment="Top" FontSize="18" FontWeight="Bold"/>
        <TextBlock HorizontalAlignment="Left" Margin="74,693,0,0" TextWrapping="Wrap" Text="Status:" VerticalAlignment="Top" FontSize="18" FontWeight="Bold"/>
        <TextBox x:Name="tbxAreaName" HorizontalAlignment="Left" Margin="309,593,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120" FontSize="18"/>
        <TextBox x:Name="tbxCoordinates1" HorizontalAlignment="Left" Margin="189,643,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120" FontSize="18"/>
        <TextBox x:Name="tbxStatus" HorizontalAlignment="Left" Margin="149,693,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120" FontSize="18"/>

        <Rectangle HorizontalAlignment="Left" Height="250" Margin="64,0,0,0" Stroke="Black" VerticalAlignment="Center" Width="425"/>
        <Rectangle HorizontalAlignment="Left" Height="250" Margin="527,0,0,0" Stroke="Black" VerticalAlignment="Center" Width="425"/>

        <Label Content="Responder Reports" HorizontalAlignment="Left" Margin="191,828,0,0" VerticalAlignment="Top" FontSize="18" FontWeight="Bold"/>
        <Label Content="Civillian Reports" HorizontalAlignment="Left" Margin="666,828,0,0" VerticalAlignment="Top" FontSize="18" FontWeight="Bold"/>
        <ListBox x:Name="lbxReportsR" HorizontalAlignment="Left" Height="214" Margin="82,884,0,0" VerticalAlignment="Top" Width="388" d:ItemsSource="{d:SampleData ItemCount=5}"/>
        <ListBox x:Name="lbxReportsC" HorizontalAlignment="Left" Height="214" Margin="540,884,0,0" VerticalAlignment="Top" Width="392" d:ItemsSource="{d:SampleData ItemCount=5}"/>

        <TextBlock HorizontalAlignment="Left" Margin="426,1213,0,0" TextWrapping="Wrap" Text="Report Information" VerticalAlignment="Top" FontSize="18" FontWeight="Bold" TextDecorations="Underline"/>
        <TextBlock HorizontalAlignment="Left" Margin="184,1288,0,0" TextWrapping="Wrap" Text="Status" VerticalAlignment="Top" FontWeight="Bold" TextDecorations="Underline" FontSize="16"/>
        <TextBlock HorizontalAlignment="Left" Margin="456,1288,0,0" TextWrapping="Wrap" Text="Coordinates" VerticalAlignment="Top" FontSize="16" FontWeight="Bold" TextDecorations="Underline"/>
        <TextBlock HorizontalAlignment="Left" Margin="774,1288,0,0" TextWrapping="Wrap" Text="Message" VerticalAlignment="Top" FontSize="16" FontWeight="Bold" TextDecorations="Underline"/>

        <Rectangle HorizontalAlignment="Left" Height="200" Margin="82,1338,0,0" Stroke="Black" VerticalAlignment="Top" Width="250"/>
        <Rectangle HorizontalAlignment="Left" Height="200" Margin="382,1338,0,0" Stroke="Black" VerticalAlignment="Top" Width="250"/>
        <Rectangle HorizontalAlignment="Right" Height="200" Margin="0,1338,68,0" Stroke="Black" VerticalAlignment="Top" Width="250"/>

        <RadioButton x:Name="rbRed" Content="- In Need of Assistance" HorizontalAlignment="Left" Margin="108,1383,0,0" VerticalAlignment="Top" FontSize="14"/>
        <RadioButton x:Name="rbOrange" Content="- Situation Being Managed" HorizontalAlignment="Left" Margin="108,1413,0,0" VerticalAlignment="Top" FontSize="14"/>
        <RadioButton x:Name="rbGreen" Content="- Situation De-Escalated" HorizontalAlignment="Left" Margin="108,1443,0,0" VerticalAlignment="Top" FontSize="14"/>
        <RadioButton x:Name="rbBlack" Content="- Danger" HorizontalAlignment="Left" Margin="108,1473,0,0" VerticalAlignment="Top" FontSize="14" Background="White"/>

        <TextBox x:Name="tbxCoordinates" HorizontalAlignment="Left" Margin="396,1353,0,0" TextWrapping="Wrap" Text="Input coordinates here as e.g. 82, 19...." VerticalAlignment="Top" Width="224" FontStyle="Italic" Height="175"/>
        <TextBox x:Name="tbxReportMessage" HorizontalAlignment="Left" Margin="694,1353,0,0" TextWrapping="Wrap" Text="Type custom message here...." VerticalAlignment="Top" Width="226" Height="175"/>
        <Rectangle Stroke="Black" Margin="82,1634,68,198"/>
        <ListBox d:ItemsSource="{d:SampleData ItemCount=5}" Margin="108,1648,80,212"/>
        <TextBlock x:Name="tblkGeneralAlerts" HorizontalAlignment="Center" Margin="0,1584,0,0" TextWrapping="Wrap" Text="General Alerts" VerticalAlignment="Top" FontSize="18" FontWeight="Bold" TextDecorations="Underline"/>

    </Grid>
</Window>
